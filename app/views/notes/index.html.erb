<%= link_to "Home", root_path %>
<%= link_to "About", about_path %>
<%= link_to "Workers", workers_path %>
<%= link_to "Notatki", notes_path %>
<% if user_signed_in? %>
<%= link_to "Wyloguj się", destroy_user_session_path, method: :delete  %>
<% else %>
<%= link_to "Zaloguj się", new_user_session_path %>
<%= link_to "Zarejestruj się", new_user_registration_path %>
<% end %>

<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Worker</th>
      <th>Meeting hour</th>
      <th>Note text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.worker_id %></td>
        <td><%= note.meeting_hour %></td>
        <td><%= note.note_text %></td>
        <td><%= link_to 'Show', note %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
